<% if controller.controller_name == 'users' && controller.action_name == 'index' %>
  <% unless current_user == user %>
    <% if current_user.following?(user) %>
      <%= form_for(current_user.relationships.find_by(follow_id: user.id), html: { method: :delete }) do |f| %>
        <%= hidden_field_tag :follow_id, user.id %>
        <%= f.submit 'フォロー外す', class: 'btn unfollow-btn'%>
      <% end %>
    <% else %>
      <%= form_for(current_user.relationships.build(follow_id: user.id)) do |f| %>
        <%= hidden_field_tag :follow_id, user.id %>
        <%= f.submit 'フォローする', class: 'btn follow-btn' %>
      <% end %>
    <% end %>
  <% end %>
<% else %>
