<div class ="container">
	<div class ="row">
		<div class ="col-xs-offset-3 col-xs-6">
			<h1>Editing Book</h1>
			<%= render 'layouts/error_messages'%>
			<%= form_for(@book) do |f| %>
				<div class ="field row">
					<label class ="title">Title</label><br>
					<%= f.text_field :title, class: "col-xs-12 title-box" %><br>
				</div>
				<div class ="field row">
					<label class ="body">Opinion</label><br>
					<%= f.text_area :body, class: "col-xs-12 body-box" %><br>
				</div>
				<div class ="action row">
					<%= f.submit 'Update Book', class: "col-xs-12 Update-btn" %><br>
				</div>
			<% end %>
			<%= link_to "Show", book_path, class: "link"%>
			|
			<%= link_to "Back", books_path, class: "link" %>
		</div>
	</div>
</div>