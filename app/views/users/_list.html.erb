
<div class ="col-xs-3">
	<h2>User info</h2>
	<%= attachment_image_tag user, :profile_image, size: "100x100", format: 'jgg', fallback: "no_img.jpg", class: "user-image" %>
	<table class ="table">
		<tbody>
			<tr>
				<th>name</th>
				<th><%= user.name %></th>
			</tr>
			<tr>
				<th>introduction</th>
				<th><%= user.introduction %></th>
			</tr>
		</tbody>
	</table>
	<div class ="row">
		<div class ="col-xs-12">
			<%= link_to  edit_user_path(user.id), class: "btn btn-default col-xs-12" do %>
				<span class="glyphicon glyphicon-wrench" aria-hidden="true"></span>
	   	 	<% end %>
		</div>
	</div>
	<h2>New book</h2>
	<%= form_for(book) do |f| %>
		<div class ="field row">
			<lavel class ="title">Title</lavel>
			<div class ="col-xs-12"><%= f.text_field :title, class: "col-xs-12 title-box" %></div>
		</div>
		<div class ="field row">
			<lavel class ="body">Opinion</lavel>
			<div class ="col-xs-12"><%= f.text_area :body, class: "col-xs-12 body-box" %></div>
		</div>
		<div class ="action row">
			<%= f.submit 'Create Book' ,class: "col-xs-12 create-btn" %>
		</div>
	<% end %>
</div>