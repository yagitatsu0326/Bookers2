<div class ="container">
	<%= render 'layouts/notifications' %>
	<div class ="row">
		<%= render 'users/list', book: @book, user: @user %>
		<div class ="col-xs-9">
			<h2>Books</h2>
			<table class ="table">
				<thead>
					<tr>
						<th></th>
						<th>Title</th>
						<th>Opinion</th>
					</tr>
				</thead>
				<tbody>
				<% @books.each do |book| %>
					<tr>
						<td><%= attachment_image_tag book.user , :profile_image, size: "40x40", format: 'jgg', fallback: "no_img.jpg", class: "user-image" %></td>
						<td><a href ="/books/<%= book.id %>"><%= book.title %></a></td>
						<td><%= book.body %></td>
						<% if book.favorited_by?(current_user) %>
							<td>
								<%= link_to book_favorites_path(book), method: :delete do %>
									<i class="fa fa-heart" aria-hidden="true" style="color: #666;"></i>
									<%= book.favorites.count %>
								<% end %>
							</td>
						<% else %>
							<td>
								<%= link_to book_favorites_path(book), method: :post do %>
									<i class="fa fa-heart-o" aria-hidden="true"></i>
									<%= book.favorites.count %>
								<% end %>
							</td>
						<% end %>
						<td>コメント数 <%= book.bookcomments.count %></td>
					</tr>
				<% end %>
				</tbody>
			</table>
		</div>
	</div>
</div>


