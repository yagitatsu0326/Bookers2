<div class ="container">
	<div class ="row">
		<div class ="col">
			<h2>User info</h2>
			<%= attachment_image_tag @user, :profile_image, size: "60x60", format: 'jgg', fallback: "no_img.jpg", class: "user-image" %>
			<table class ="table">
				<tbody>
					<tr>
						<td>name</td>
						<td> <%= @user.name %></td>
					</tr>
					<tr>
						<td>introduction</td>
						<td><%= @user.introduction %></td>
					</tr>
				</tbody>
			</table>
			<div class ="row">
					<p><%= link_to "プロフィール設定", edit_user_path %></p>
			</div>
			<h2>New book</h2>
			<%= form_for(@book, url: books_path) do |f| %>
				<lavel class ="title">Title</lavel>
				<%= f.text_field :title, class: "title-box" %>
				<lavel class ="body">Opinion</lavel>
				<%= f.text_area :body, class: "body-box" %>
				<div class ="row">
					<%= f.submit 'Create Book'%>
				</div>
			<% end %>
		</div>
		<div class ="col">
			<h2>Books</h2>
			<table class ="table">
				<thead>
					<tr>
						<th></th>
						<th>Title</th>
						<th>Opinion</th>
					</tr>
				</thead>
				<tbody>
					<% @books.each do |book| %>
						<tr>
							<td><%= book.title %></td>
							<td><%= book.title %></td>
							<td><%= book.body %></td>
						</tr>
					<% end %>
				</tbody>
			</table>
		</div>
	</div>
</div>


