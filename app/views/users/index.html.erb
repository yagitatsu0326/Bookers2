<h2>Users</h2>
<table class ="table">
	<thead>
		<tr>
			<th>Image</th>
			<th>Name</th>
			<th></th>
		</tr>
	</thead>
	<tbody>
		<% @users.each do |user| %>
			<tr>
				<td><%= attachment_image_tag user, :profile_image, format: 'jpg',fallback: "no_img.jpg", size: "60x60" %></td>
				<td><%= user.name %></td>
				<td><a href ="/users/<%= user.id%>">Show</a></td>
			</tr>
		<% end %>
	</tbody>
</table>